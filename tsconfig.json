{
  "compilerOptions": {
    "outDir": "build/dist",
    "target": "es2017",
    "module": "es2015",
    "lib": [
      "es2017", "dom", "dom.iterable"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "strict": false,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "types": [
      "react"            
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
